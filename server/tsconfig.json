{
    "extends": "../tsconfig.json",
    "compilerOptions": {
        "outDir": "../dist/server",
        "rootDir": ".",
        "module": "CommonJS",
        "target": "ES2020",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "declaration": false,
        "sourceMap": true,
        "types": ["node"]
    },
    "include": [
        "**/*.ts",
        "**/*.js"
    ],
    "exclude": [
        "node_modules",
        "../dist",
        "../.next",
        "../out"
    ]
}
